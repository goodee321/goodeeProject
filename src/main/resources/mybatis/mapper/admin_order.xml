<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nike.web.mapper.AdminOrderMapper">

    
    
    
    
    
    
    
    
    
    
    
    <!-- admin -->
    
    <!-- 목록(beginRecord - endRecord) Admin -->
	<select id="selectOrderList" parameterType="Map" resultType="OrderDTO">
		 SELECT *
       	   FROM ORDER_TB
       LIMIT #{beginRecord}, #{recordPerPage}
	</select>
	
	
	
	
	
	<!-- 전체 레코드 갯수(Admin) -->
	<select id="selectOrderCount" resultType="Integer">
		SELECT COUNT(*)
		  FROM ORDER_TB
	</select>
	
 	
 	
 	
	<!-- 검색된 레코드 갯수 -->
	<select id="selectFindCount" parameterType="Map" resultType="Integer">
		SELECT COUNT(*)
		  FROM ORDER_TB
		  WHERE ${column} LIKE CONCAT('%', TRIM(#{query}), '%')
	</select>
	
	
	
	<!-- 검색 -->
	<select id="selectFindList" parameterType="Map" resultType="OrderDTO">
		SELECT *
		  FROM ORDER_TB
		WHERE ${column} LIKE CONCAT('%', TRIM(#{query}), '%')
		
	</select>
	
	
	
	<!-- 상세보기(Admin) -->
	<select id="selectOrderByNo" parameterType="Long" resultType="OrderDTO">
		SELECT *
		  FROM ORDER_TB
		 WHERE ORDER_NO = #{orderNo}
	</select>
	
	
	<!-- 수정(Admin) -->
	<update id="updateOrder" parameterType="OrderDTO">
		UPDATE
		       ORDER_TB
		   SET
		       ORDER_NO = #{orderNo}
		     , ORDER_NAME = #{orderName}
		     , ORDER_PHONE = #{orderPhone}
		     , ORDER_ADDR = #{orderAddr}
		     , ADDR_DETAIL = #{addrDetail}
		     , ORDER_INVOICE = #{orderInvoice}
		     , ORDER_DELIVERY = #{orderDelivery}
		     , ORDER_STATE = #{orderState}
		     
		    
		 WHERE
		   	   ORDER_NO = #{orderNo}
	</update>
	
	
	
	<!-- 다중 삭제(선택해서 삭제) Adimin -->
	<!-- DELETE FROM NOTICE WHERE NOTICE_NO IN(1,4) -->
	<delete id="deleteOrderList">
		DELETE
		  FROM ORDER_TB
		<where> 
		 	<foreach collection="list" item="orderNo" open="ORDER_NO IN(" separator="," close=")">
				#{orderNo}
			</foreach>
		</where>
	</delete>
	
	
	
	<!-- 개별삭제(Admin) -->
	<delete id="deleteOrder" parameterType="Long">
		DELETE
		  FROM ORDER_TB
		 WHERE ORDER_NO = #{orderNo}
	</delete>
    
    
    
    
    

</mapper>